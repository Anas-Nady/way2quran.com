    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.1",
    "@types/nodemailer": "^6.4.17",
    "@types/redis": "^4.0.10",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.12.2",
    "child_process": "^1.0.2",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "nodemon": "^3.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
